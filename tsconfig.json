{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@scripts/*": ["./scripts/*"],
      "@agents/*": ["./agents/*"]
    },
    "types": ["node"]
  },
  "include": [
    "scripts/**/*",
    "agents/**/*",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ]
}
